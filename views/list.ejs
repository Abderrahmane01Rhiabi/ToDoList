<%- include("header"); -%>

    <div class="box" id="heading">
        <h1><%= currentTitle %></h1>
    </div>

    <div class="box">
        <% for(var i=0;i< newListItems.length ;i++){ %>
            <div class="item">
                <input type="checkbox">
                <p> <%= newListItems[i] %></p>
            </div>
        <%}%>
    
        <form class="item" action="/" method="post">
            <input placeholder="New Item" autocomplete="off" type="text" name="newItem">
            <button type="submit" name="list" value=<%= currentTitle %>>+</button>
        </form>

    </div>
    
<%- include("footer"); -%>
